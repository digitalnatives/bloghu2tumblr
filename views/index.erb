      <label for='blog_name'>Choose your blog</label>
      <select name="blog_name">
        <% session[:tumblr_blogs].each do |blog| %>
          <option value="<%= blog['name'] %>"><%= blog['title'] %></option>
      <% end %>
      </select>
    </p>

    <p>
